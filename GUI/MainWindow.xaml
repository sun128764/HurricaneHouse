<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="FIT Hurricane House Monitor" Height="560" Width="800">
    <Grid>
        <GroupBox Header="Network Status" HorizontalAlignment="Left" Height="336" Margin="26,46,0,0" VerticalAlignment="Top" Width="128">
            <TreeView HorizontalAlignment="Left" Height="304" VerticalAlignment="Top" Width="118" Margin="0,10,-2,0" Background="#FFF8F9E4" SelectedItemChanged="SelectionChanged">
                <TreeViewItem Header="Network">
                    <StackPanel Orientation="Horizontal">
                        <Image></Image>
                        <TextBlock Text="ssss" Margin="5,0"></TextBlock>
                    </StackPanel>
                </TreeViewItem>
            </TreeView>
        </GroupBox>
        <GroupBox Header="Sensor Status" HorizontalAlignment="Left" Height="135" Margin="26,387,0,0" VerticalAlignment="Top" Width="744" Background="#FFF8F9E4"/>
        <GroupBox Header="Real-time Monitor" HorizontalAlignment="Left" Height="336" Margin="159,46,0,0" VerticalAlignment="Top" Width="611" Background="#FFF8F9E4">
            <lvc:CartesianChart Series="{Binding SeriesCollection}" />
        </GroupBox>
    </Grid>
</Window>
